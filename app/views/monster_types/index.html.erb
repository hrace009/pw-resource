<p id="notice"><%= notice %></p>

<h1>Listing Monster Types</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @monster_types.each do |monster_type| %>
      <tr>
        <td><%= link_to 'Show', monster_type %></td>
        <td><%= link_to 'Edit', edit_monster_type_path(monster_type) %></td>
        <td><%= link_to 'Destroy', monster_type, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

